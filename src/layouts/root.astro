---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Wedding Photo Upload App" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="w-screen h-screen bg-[url('/bouquet.webp')]">
            <main class="bg-white bg-opacity-60 sm:mx-72 mx-10 h-full">
                <slot />
            </main>
        </div>
    </body>
</html>
