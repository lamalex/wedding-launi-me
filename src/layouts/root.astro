---
import UploadThingSSR from "../components/uploadthing-ssr.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Wedding Photo Upload App" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <UploadThingSSR />
    <body>
        <div class="w-screen h-screen bg-[url('/bouquet.webp')]">
            <slot />
        </div>
    </body>


</html>
